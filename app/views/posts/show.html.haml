.view-posts
  .post
    .wrapper
      %h3.title
        = @post.title
      .author
        -if @post.user
          = "by: #{@post.user.username}"
      .categories
        Category: 
        -if @post.category_name
          = @post.category_name
      .body
        = @post.html_body
      .footer

  -if logged_in?
    %fieldset#administer
      %ul
        %li
          = button_to "Edit", edit_post_path(@post), :method => :get
        %li
          = button_to "Destroy", @post, :confirm => 'Are you sure?', :method => :delete
