.view-posts
  - for post in @posts
    .post
      .wrapper
        %h3.title
          %a{:href=>"#{post_path(post)}"}= post.title
        .author
          -if post.user
            = "by: #{post.user.username}"
        .categories
          -unless post.categories.blank?
            Category:
            |
            -post.categories.each do |cat|
              = link_to cat.name, category_path(cat)
              |
        .body
          = post.html_body
        .footer

%h4.post-archive
  %a{:href => "/posts/archive"}
    \- Post Archive -

- if logged_in?
  %p= link_to "New Post", new_post_path
