.view-posts
  - for post in @posts
    .post
      .wrapper
        %h3.title
          %a{:href=>"#{post_path(post)}"}= post.title
        .author
          -if post.user
            = "by: #{post.user.username}"
        .categories
          -unless post.categories.blank?
            Category:
            |
            -post.categories.each do |cat|
              %a{:href => "/posts/category/#{cat.name}"}
                =cat.name
              |
        .body
          = post.html_body
        .footer

- if logged_in?
  %p= link_to "New Post", new_post_path
